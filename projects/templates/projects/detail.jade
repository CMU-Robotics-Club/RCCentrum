extends 'base.jade'
{% load static %}
{% load txt2img %}
{% load project_label %}

block title
  | {{ project.name }} 

block content
  .container
    .row
      .col-md-6
        .text-center
          h4
            for leader in project.leaders.all
              {{ leader.user.get_full_name }} - {{ leader.user.email|txt2img:18|safe}}
              br
      .col-md-6
        h4
          a(href="{{ project.website }}" target="_blank")
            {{ project.website }}
        h5
          {{ project|project_label|safe }}

        hr
          
    .row
      .col-md-6
        .text-left
          img.img-thumbnail(src="{% get_media_prefix %}{{ project.image }}" style="width:80%; height:80%;")
      .col-md-6
        | {{ project.description }}