extends 'base.jade'

block title
  | {{ project.name }} 

block content
  .well
    .container
      .row
        .col-md-12
          .pull-left
            h2
              u
                | {{ project.name }}
            h4
              for leader in project.leaders.all
                {{ leader.user.first_name }} {{ leader.user.last_name }} - {{ leader.user.email }}
            h4
              a(href="{{ project.website }}" target="_blank")
                {{ project.website }}

            hr
            
      .row
        .col-md-6
          img.img-thumbnail(src="/media/{{ project.image }}" style="width:80%; height:80%;")
        .col-md-6
          | {{ project.description }}