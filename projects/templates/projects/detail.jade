extends 'base.jade'
{% load static %}

block title
  | {{ project.name }} 

block content
  .container
    .row
      .col-md-6
        .text-center
          h4
            for leader in project.leaders.all
              {{ leader.user.get_full_name }}
              br
      .col-md-6
        h4
          a(href="{{ project.website }}" target="_blank")
            {{ project.website }}

        hr
          
    .row
      .col-md-6
        .text-left
          img.img-thumbnail(src="{% get_media_prefix %}{{ project.image }}" style="width:80%; height:80%;")
      .col-md-6
        | {{ project.description }}