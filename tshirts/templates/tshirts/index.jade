extends 'base.jade'
{% load static %}

block title
  | TShirts 

block content
  .container-fluid
    .row
      for tshirt in tshirts
        .col-md-6
          .well
            .row
              .col-md-12
                  .pull-center
                    img.img-thumbnail(src="{% get_media_prefix %}{{ tshirt.front_image }}" style="width:200px; height:200px;")
                  .pull-center
                    img.img-thumbnail(src="{% get_media_prefix %}{{ tshirt.back_image }}" style="width:200px; height:200px;")
              .col-md-12
                .caption
                  h3
                    | {{ tshirt.name }}

                  p
                    | {{ tshirt.year }}
