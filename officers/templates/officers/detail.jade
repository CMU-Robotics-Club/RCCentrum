extends 'base.jade'

block title
  | {{ officer.position }} 

block content
  .well
    .container
      .row
        .col-md-12
          .pull-left
            h3
              u
                | {{ officer.position }} - {{ officer.user.user.first_name }} {{ officer.user.user.last_name }}

      .row
        .col-md-6
          img(src="/media/{{ officer.image }}" style="width:300px; height:300px;")
        .col-md-6
          | {{ officer.description }}
