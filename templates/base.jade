html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")

        script(src="{% static 'jquery-1.11.1.min.js' %}")

        title
            if flatpage.title
                {{ flatpage.title }}
            else
                +title
            || CMU Robotics Club

        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
        script(src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js", type="text/javascript")
        <![endif]-->

        link(href="{% static 'font-awesome/css/font-awesome.min.css' %}" rel="stylesheet")
        link(href="{% static 'bootstrap/css/bootstrap.min.css' %}", rel="stylesheet", media="screen")
        link(href="{% static 'css/default.css' %}" rel="stylesheet")

        <!-- Google Anasslytics -->
        script
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', '');
            ga('send', 'pageview');
        <!-- End Google Analytics -->

    body
        {% include "header.jade" %}

        .container
            <!-- TODO there is a better way to handle the main page -->
            if flatpage.title == "Welcome"
                .row
                    img.banner(src='/crm/media/uploads/banner.jpg') 
            .row    
                .jumbotron
                    if flatpage.content
                        if flatpage.title != "Welcome"
                            h2
                                | {{ flatpage.title }}
                            hr.hr-style
                        {{ flatpage.content | cut:"// <![CDATA[" | cut:"// ]]>" }}
                    else
                        h2
                            +title
                        hr.hr-style
                        block content        
                {% include "footer.jade" %}

        script(src="{% static 'bootstrap/js/bootstrap.min.js' %}")
