{% load staticfiles %}
{% load static %}
{% load gallery %}
{% get_gallery as photos %}

mixin title
    block title

!!! 5
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")

        script(src="{% static 'jquery-1.11.1.min.js' %}")

        title
            if flatpage.title
                {{ flatpage.title }}
            else
                +title
            || CMU Robotics Club

        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
        script(src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js", type="text/javascript")
        <![endif]-->

        link(href="{% static 'font-awesome/css/font-awesome.min.css' %}" rel="stylesheet")
        link(href="{% static 'bootstrap/css/bootstrap.min.css' %}", rel="stylesheet", media="screen")
        link(href="{% static 'css/default.css' %}" rel="stylesheet")

        <!-- Google Anasslytics -->
        script
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', '');
            ga('send', 'pageview');
        <!-- End Google Analytics -->

    body
        {% include "header.jade" %}

        .container            
            <!-- TODO there is a better way to handle the main page -->
            if flatpage.url == '/'
                .row
                    .carousel.slide(id="gallery_carousel", data-ride="carousel")
                        ol.carousel-indicators
                            for photo, index in photos
                                if index == 0
                                    li.active(data-target="#gallery_carousel", data-slide-to="{{ index }}")
                                else
                                    li(data-target="#gallery_carousel", data-slide-to="{{ index }}")
                        .carousel-inner(role="listbox")
                            for photo, index in photos
                                if index == 0
                                    .item.active
                                        .text-center
                                            img(src="{{ photo.image.url }}", width="100%", height="20%", alt="{{index}}")
                                            .container
                                                .carousel-caption
                                                    if photo.title
                                                        h1
                                                            | {{ photo.title }}
                                                    if photo.description
                                                        p
                                                            | {{ photo.description|safe }}
                                else
                                    .item
                                        .text-center
                                            img(src="{{ photo.image.url }}", width="100%", height="20%", alt="{{index}}")
                                            .container
                                                .carousel-caption
                                                    if photo.title
                                                        h1
                                                            | {{ photo.title }}
                                                    if photo.description
                                                        p
                                                            | {{ photo.description|safe }}

                        a.left.carousel-control(href="#gallery_carousel", role="button", data-slide="prev")
                            span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
                            span.sr-only
                                | Previous
                        a.right.carousel-control(href="#gallery_carousel", role="button", data-slide="next")
                            span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
                            span.sr-only
                                | Next
                hr
            .row  
                .jumbotron
                    if flatpage.content
                        if flatpage.url != '/'
                            h2
                                | {{ flatpage.title }}
                            hr.hr-style
                        {{ flatpage.content | cut:"// <![CDATA[" | cut:"// ]]>" }}
                    else
                        h2
                            +title
                        hr.hr-style
                        block content        
                {% include "footer.jade" %}

        script(src="{% static 'bootstrap/js/bootstrap.min.js' %}")
