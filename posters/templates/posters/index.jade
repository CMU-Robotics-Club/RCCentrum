extends 'base.jade'
{% load static %}
{% load thumbnail %}

block title
  | Posters 

block content
  .container-fluid
    .row
      .alert.alert-info(role="alert")
        strong
          | Hint
        br
        | Click on posters for full resolution image.

    .row
      each poster, index in posters
        .col-md-12
          a(href="#poster{{ index }}")
            p
              | {{ poster.name }} - {{ poster.year }}

    hr.hr-style

    .row
      each poster, index in posters
        .col-md-12
          .row
            .anchor(id="poster{{ index }}")
            .col-md-12
                .pull-center
                  a(href="{{ poster.image.url }}" target="_blank")
                    img.img-thumbnail(src="{% thumbnail poster.image 821x500 crop %}" style="width: 75%;")
            .col-md-12
              .caption
                h3
                  | {{ poster.name }}

                p
                  | {{ poster.year }}
          hr.hr-style
