extends 'base.jade'
{% load static %}

block title
  | Posters 

block content
  .container-fluid
    .row
      each poster, index in posters
        .col-md-12
          a(href="#poster")
            p
              | {{ poster.name }} - {{ poster.year }}

    hr.hr-style

    .row
      for poster in posters
        .col-md-12(id="poster{{ poster.id }}")
          .row
            .col-md-12
                .pull-center
                  img.img-thumbnail(src="{% get_media_prefix %}{{ poster.image }}" style="width: 75%;")
            .col-md-12
              .caption
                h3
                  | {{ poster.name }}

                p
                  | {{ poster.year }}
          hr.hr-style
